@model LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="d-flex justify-content-center gap-5 align-items-center" style="height: calc(100vh - 80px)">
    <div >
        <h1 class="text-center"> Manejo de presupuesto </h1>
        <h4>Aplicación para gestionar tus finanzas</h4>
    </div>
    <div class="card w-50">
        <div class="card-body">
            <h1>@ViewData["Title"]</h1>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe"/>
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>

            </form>

        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}